<?import com.infoyupay.humandate.core.HumanDateFormatter?>
<?import com.infoyupay.humandate.fx.*?>
<?import com.infoyupay.humandate.fx.showcase.fxpojos.*?>
<?import com.infoyupay.humandate.fx.showcase.HelpView?>
<?import com.infoyupay.humandate.fx.showcase.SupportedLanguages?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.TextFieldTableCell?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import java.time.LocalDate?>
<Scene xmlns:fx="http://javafx.com/fxml"
       xmlns="http://javafx.com/javafx"
       fx:controller="com.infoyupay.humandate.fx.showcase.FxShowcaseForm"
       fx:id="scene">
    <VBox prefHeight="600" prefWidth="600" spacing="5.0">
        <padding>
            <Insets top="5.0"/>
        </padding>
        <FlowPane minHeight="32" hgap="5.0" vgap="5.0">
            <padding>
                <Insets topRightBottomLeft="5.0"/>
            </padding>
            <RadioButton text="(Es)pañol" selected="true">
                <toggleGroup>
                    <ToggleGroup fx:id="tgpLanguage"/>
                </toggleGroup>
                <userData>
                    <SupportedLanguages fx:constant="ES"/>
                </userData>
            </RadioButton>
            <RadioButton text="(En)glish" toggleGroup="$tgpLanguage">
                <userData>
                    <SupportedLanguages fx:constant="EN"/>
                </userData>
            </RadioButton>
            <RadioButton text="(Que)chua" toggleGroup="$tgpLanguage">
                <userData>
                    <SupportedLanguages fx:constant="QUE"/>
                </userData>
            </RadioButton>
        </FlowPane>
        <TabPane tabClosingPolicy="UNAVAILABLE" tabDragPolicy="REORDER" side="LEFT">
            <Tab text="${controller.helpText}">
                <ScrollPane>
                    <HelpView fx:id="help"/>
                </ScrollPane>
            </Tab>
            <Tab text="Fields">
                <GridPane maxHeight="-Infinity" maxWidth="-Infinity"
                          minHeight="-Infinity" minWidth="-Infinity"
                          hgap="5.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"
                                           maxWidth="-Infinity"
                                           minWidth="-Infinity"
                                           prefWidth="200.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
                    </rowConstraints>
                    <padding>
                        <Insets topRightBottomLeft="5.0"/>
                    </padding>
                    <Label text="Date Picker:"
                           maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity"
                           prefHeight="32.0"
                           GridPane.columnIndex="0" GridPane.rowIndex="0"
                    />
                    <DatePicker maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                                minHeight="-Infinity"
                                prefHeight="32.0"
                                GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <converter>
                            <HumanDateConverter fx:id="datePickerConverter"/>
                        </converter>
                    </DatePicker>
                    <Label text="Text Field + Text Formatter:"
                           maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity"
                           prefHeight="32.0"
                           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                               minHeight="-Infinity"
                               prefHeight="32.0"
                               GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <textFormatter>
                            <HumanDateTextFormatter fx:id="textFieldFormatter"/>
                        </textFormatter>
                    </TextField>
                    <Hyperlink text="Label:"
                               onAction="#linkLabelClicked"
                               maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                               minHeight="-Infinity"
                               prefHeight="32.0"
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <HumanDateLabel fx:id="lblDate"
                                    style="-fx-border-color: BLACK;"
                                    maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                                    minHeight="-Infinity"
                                    prefHeight="32.0"
                                    alignment="CENTER"
                                    GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <dateFormatter>
                            <HumanDateFormatter/>
                        </dateFormatter>
                        <dateValue>
                            <LocalDate fx:factory="now"/>
                        </dateValue>
                    </HumanDateLabel>
                    <Label text="Hyperlink:"
                           maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                           minHeight="-Infinity"
                           prefHeight="32.0"
                           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Hyperlink text="${controller.hyperlinkText}"
                               onAction="#hyperlinkFieldAction"
                               maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
                               minHeight="-Infinity"
                               prefHeight="32.0"
                               alignment="CENTER"
                               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>
            </Tab>
            <Tab text="TableView">
                <TableView fx:id="table" editable="true">
                    <columns>
                        <TableColumn text="ID" style="-fx-text-fill: #9e9e9e;">
                            <cellValueFactory>
                                <TableViewHelpers fx:factory="idNumber"/>
                            </cellValueFactory>
                            <cellFactory>
                                <TextFieldTableCell fx:factory="forTableColumn"/>
                            </cellFactory>
                        </TableColumn>
                        <TableColumn text="Name" style="-fx-text-fill: #757575;">
                            <cellValueFactory>
                                <TableViewHelpers fx:factory="name"/>
                            </cellValueFactory>
                            <cellFactory>
                                <TextFieldTableCell fx:factory="forTableColumn"/>
                            </cellFactory>
                        </TableColumn>
                        <TableColumn text="Birthday"
                                     style="-fx-background-color: rgba(255, 235, 59, 0.18); -fx-font-weight: bold;">
                            <cellValueFactory>
                                <TableViewHelpers fx:factory="birthday"/>
                            </cellValueFactory>
                            <cellFactory>
                                <HumanDateTableCellFactory fx:id="tableCellFactory"/>
                            </cellFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </Tab>
            <Tab text="TreeTableView">
                <TreeTableView fx:id="treeTable" editable="true">
                    <FxInvoice fx:factory="sampleTree"/>
                    <columns>
                        <TreeTableColumn text="Due Date" editable="false" prefWidth="150">
                            <cellFactory>
                                <HumanDateTreeTableCellFactory/>
                            </cellFactory>
                            <cellValueFactory>
                                <TreeTableViewHelpers fx:factory="dueDate"/>
                            </cellValueFactory>
                        </TreeTableColumn>
                        <TreeTableColumn text="Number" editable="false">
                            <cellValueFactory>
                                <TreeTableViewHelpers fx:factory="number"/>
                            </cellValueFactory>
                        </TreeTableColumn>
                        <TreeTableColumn text="Issue Date">
                            <cellFactory>
                                <HumanDateTreeTableCellFactory fx:id="treeTableCellFactory"/>
                            </cellFactory>
                            <cellValueFactory>
                                <TreeTableViewHelpers fx:factory="issueDate"/>
                            </cellValueFactory>
                        </TreeTableColumn>
                        <TreeTableColumn text="Amount" editable="false" style="-fx-alignment: CENTER_RIGHT">
                            <cellValueFactory>
                                <TreeTableViewHelpers fx:factory="amount"/>
                            </cellValueFactory>
                            <cellFactory>
                                <TreeTableViewHelpers fx:factory="amountCellFactory"/>
                            </cellFactory>
                        </TreeTableColumn>
                    </columns>
                </TreeTableView>
            </Tab>
            <Tab text="ListView">
                <ListView fx:id="listView" editable="true"/>
            </Tab>
        </TabPane>
    </VBox>

</Scene>
